<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarMedicina"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgRetrocederMediEditar"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/circlearrowleftsolid" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/paw_solid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Toys"
                android:textColor="#02020A"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Medicamento"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Por favor, revise sus datos antes de guardar cambios"
            android:textSize="14sp"
            android:textColor="#99000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="C贸digo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#02020A"/>

        <EditText
            android:id="@+id/editCodigoMedicina"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ingresar su c贸digo"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Descripci贸n"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#02020A"/>

        <EditText
            android:id="@+id/editDescripcionMedicina"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ingrese la descripci贸n"
            android:inputType="text" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Vencimiento"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#02020A"/>

        <EditText
            android:id="@+id/editVencimientoMedicina"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ingrese su fecha de vencimiento"
            android:inputType="text"
            android:focusable="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cantidad"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#02020A"/>

        <EditText
            android:id="@+id/editCantidadMedicina"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ingrese cantidad "
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnEditGuardarMedicina"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/boton"
                android:text="Guardar Cambios"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>