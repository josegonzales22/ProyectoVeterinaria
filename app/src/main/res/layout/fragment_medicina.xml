<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMedicina"
    android:orientation="vertical"
    android:padding="15dp">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/paw_solid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Toys"
            android:textColor="#02020A"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicinas"
            android:textColor="#000000"
            android:textSize="25sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Estas son nuestras novedades"
            android:textColor="#99000000"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/contenedor_redon_cliente"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingRight="5dp"
            android:src="@drawable/pillssolid" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Último medicina registrada"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/infCodMed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código: {medicina}"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/infCantMed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad: {medicina}"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/infDesMed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción: {mediicina}"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">
        <TextView
            android:id="@+id/txtMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hola {usuario}"
            android:textColor="#000000"
            android:textSize="25sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estas son nuestras opciones disponibles"
            android:textSize="14sp"
            android:textColor="#99000000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <Button
            android:id="@+id/btnListarMedicamento"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/boton_a"
            android:drawableTop="@drawable/wired_flat_1277_antibacterial_spray_disinfection"
            android:text="Lista de medicinas"
            android:gravity="center_horizontal"
            android:textColor="#F3F2F2"
            />

        <Button
            android:id="@+id/btnNuevoMedicamento"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:background="@drawable/boton_b"
            android:drawableTop="@drawable/wired_flat_49_plus_circle"
            android:text="Nueva medicina"
            android:gravity="center_horizontal"
            android:textColor="#F3F2F2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">
        <Button
            android:id="@+id/btnEditarMedicamento"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/boton_c"
            android:drawableTop="@drawable/wired_flat_35_edit"
            android:text="Editar medicina"
            android:gravity="center_horizontal"
            android:textColor="#F3F2F2"
            />
        <Button
            android:id="@+id/btnEliminarMedicamento"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:background="@drawable/boton_d"
            android:drawableTop="@drawable/wired_flat_50_minus_circle"
            android:text="Eliminar medicina"
            android:gravity="center_horizontal"
            android:textColor="#F3F2F2"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>